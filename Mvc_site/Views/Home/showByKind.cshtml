@{
    Layout = "Shared\\_Layout.cshtml";
}

<h2>showByKind</h2>
<table>
    <tr class="header">
        <td><p>id</p></td>
        <td><p>Название книги</p></td>
        <td><p>Автор</p></td>
        <td><p>Цена</p></td>
        <td><p>Вид</p></td>
        <td><p>Путь</p></td>
        <td><p>Описание</p></td>
        <td></td>
    </tr>

    @foreach (var b in ViewBag.Books)
    {
        <tr>
            <td><p>@b.id</p></td>
            <td><p>@b.name</p></td>
            <td><p>@b.author</p></td>
            <td><p>@b.price</p></td>
            <td><p>@ViewBag.Kind</p></td>
            <td>
                <img src="D:/учеба/web/web_asp_net/Mvc_site/Mvc_site/Images/@b.imagePath" alt="альтернативный текст" />
                </td>
                <!--<td><p>@b.imagePath</p></td>-->
<td><p>@b.description</p></td>
            
            <!---=<td><p><a href="/My/sum?a=6&b=5">Считать</a></p></td>-->
        </tr>
    }
</table>

