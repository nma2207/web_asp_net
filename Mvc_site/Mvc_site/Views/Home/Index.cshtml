@{
    Layout = "Shared\\_Layout.cshtml";
}
<div>
    <h2> <p><a href="Home/Reg">Зарегаться</a></p></h2>
    <h2> <p><a href="Home/AllPersons">все пользователи</a></p></h2>
    
    <h3>Распродажа книг</h3>
    <table>
        <tr class="header">
            <td><p>Название книги</p></td>
            <td><p>Автор</p></td>
            <td><p>Цена</p></td>
            <td></td>
        </tr>

        @foreach (var b in ViewBag.Books)
        {
            <tr>
                <td><p>@b.name</p></td>
                <td><p>@b.author</p></td>
                <td><p>@b.price</p></td>
                <td><p><a href="/Home/Buy/@b.id">Купить</a></p></td>
                <td><p><a href="/Home/square?a=6&b=5">Считать</a></p></td>
            </tr>
        }
    </table>
</div>